<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/search_bar_blank_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/search_bar_bg1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/search1_32" />

        <TextView
            android:id="@+id/search_bar_blank_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="搜索"
            android:textColor="@drawable/IconGray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_bar_search_ll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/search_bar_input_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/search_bar_bg2"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/search1_32" />

            <EditText
                android:id="@+id/search_bar_input_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/White"
                android:gravity="center_vertical|left"
                android:hint="搜索"
                android:padding="5dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/search_bar_clear_input_ib"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/White"
                android:src="@drawable/close4_32" />

            <ImageButton
                android:id="@+id/search_bar_dictation_ib"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:background="@drawable/White"
                android:src="@drawable/dictation5_50" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_bar_advanced_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ThemeDefault"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_bar_advanced_tv"
                style="@style/TitleClickStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="高级"
                android:textColor="@drawable/White"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/search_bar_cancel_tv"
                style="@style/TitleClickStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="取消"
                android:textColor="@drawable/White"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>